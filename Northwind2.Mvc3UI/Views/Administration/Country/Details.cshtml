@using Northwind2.Common.Constants
@using Northwind2.Mvc3UI.Infrastructure
@model Northwind2.Mvc3UI.ViewModels.Administration.CountryViewModel

<fieldset>
    <legend>Country Details</legend>     
    <table cellspacing="0" cellpadding="0" class="grid">
        <tr>
            <td>@Html.LabelFor(model => model.CountryID)</td>
            <td>@Html.DisplayFor(model => model.CountryID)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.CountryName)</td>
            <td>@Html.DisplayFor(model => model.CountryName)</td>
        </tr> 
    </table>
</fieldset>	     
    
<div>
    @Html.ActionLink(Constants.CANCEL_AND_RETURN_TO_LIST, "Index")
</div>	

@RenderPage("_CountryProductList.cshtml")
