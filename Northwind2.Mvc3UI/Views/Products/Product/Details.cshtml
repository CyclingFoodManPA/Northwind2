@using Northwind2.Common.Constants
@using Northwind2.Mvc3UI.Infrastructure
@model Northwind2.Mvc3UI.ViewModels.Products.ProductViewModel

<fieldset>
    <legend>Product Details</legend>     
    <table cellspacing="0" cellpadding="0" class="grid">
        <tr>
            <td>@Html.LabelFor(model => model.ProductID)</td>
            <td>@Html.DisplayFor(model => model.ProductID)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.ProductName)</td>
            <td>@Html.DisplayFor(model => model.ProductName)</td>
        </tr> 
    </table>
</fieldset>	     
	
<div>
    @Html.ActionLink(Constants.CANCEL_AND_RETURN_TO_LIST, "Index")
</div>	

@RenderPage("_ProductProductList.cshtml")
